<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.storm.stormreview">
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.storm.stormreview.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.storm.stormreview.Activities.TeamProgressActivity"></activity>
        <activity
            android:name="com.example.storm.stormreview.Activities.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity android:name="com.example.storm.stormreview.Activities.LeaderBoardActivity" ></activity>
        <activity android:name="com.example.storm.stormreview.Activities.HomeActivity"></activity>
    </application>

</manifest>